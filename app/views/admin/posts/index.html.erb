<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>文章管理</h2>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">
      <div class="ibox">
        <div class="ibox-title">
          <h5>文章列表</h5>
          <div class="ibox-tools">
            <%= link_to new_admin_post_path do %>
                <i class="fa fa-plus">新文章</i>
            <% end %>
          </div>
        </div>

        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table text-center table-striped table-hover">
              <thead>
              <tr>
                <td></td>
                <td>题目</td>
                <td>创建时间</td>
                <td>更新时间</td>
                <td>操作</td>
              </tr>
              </thead>
              <tbody>
              <% @posts.each_with_index do |post, i| %>
                  <tr>
                    <td><%= i+1 %></td>
                    <td><%= post.title %></td>
                    <td><%= post.created_at %></td>
                    <td><%= post.updated_at %></td>
                    <td>
                      <%if post.is_recommend %>
                          <%= link_to '取消推荐', admin_post_unrecommend_path(post), method: 'post', class: 'btn btn-sm btn-success'%>
                      <%else%>
                          <%= link_to '推荐', admin_post_recommend_path(post), method: 'post', class: 'btn btn-sm btn-success'%>
                      <%end%>
                      <%= link_to '编辑', [:edit, :admin, post], class: 'btn btn-sm btn-warning' %>
                      <%= link_to '删除', [:admin, post], method: :delete, data:{confirm: '确定删除文章吗？'}, class: 'btn btn-sm btn-danger' %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

