<div class="middle-box text-center loginscreen   animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">QuickStep Solutions</h1>
    </div>
    <h3>注册</h3>
    <p>成为会员并享受更多</p>
    <%= simple_form_for(resource, as: resource_name, class: 'm-t', url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name, label: false, placeholder: '姓名' %>
      <%= f.input :phone, label: false, placeholder: '电话' %>
      <%= f.input :email, label: false, placeholder: '邮箱（选填）' %>
      <%= f.input :password, label: false, placeholder: '密码' %>
      <%= f.input :password_confirmation, label: false, placeholder: '重复密码' %>
      <button type="submit" class="btn btn-primary block full-width m-b">注册</button>
      <p class="text-muted text-center"><small>已经有帐号了？</small></p>
      <%= link_to '登录', [:new, :user, :session], 
            class: "btn btn-sm btn-white btn-block" %>
    <% end %>
    <p class="m-t"> <small>QuickStep Solutions &copy; 2014</small> </p>
  </div>
</div>
